<section class="hero is-info">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        {{courseTitle}}
      </h1>
      <h1 class="subtitle">
        {{title}}
      </h1>
    </div>
  </div>
</section>
<section class="hero">
  <div class="hero-body">
    <div class="container">
      <div class="columns">
        <div class="column is-three-fifths">
          <video width="100%" controls autoplay src="{{video}}">Lession video</video>
        </div>
        <div class="column content">
          <p>{{description}}</p>
          <h1 class="title is-5">Resourses</h1>
          <ul>
            {{#each resources}}
            <li><a href="{{link}}" target="_blank">{{name}}</a></li>
            {{/each}}
          </ul>
        </div>
      </div>
      <div class="column">
        <h1 class="title is-5">Comments</h1>
        <div class="media">
          <figure class="media-left">
            <p class="image is-64x64 is-info">
              <img src="https://bulma.io/images/placeholders/128x128.png" alt="">
            </p>
          </figure>
          <div class="media-content">
            <div>
              <div class="field">
                <div class="control">
                  <textarea class="textarea" placeholder="Add a comment..." rows="2"></textarea>
                </div>
              </div>
              <div class="control">
                <button class="button is-success">Leave a comment</button>
              </div>
            </div>
          </div>
        </div>
        {{#each comments}}
        <div class="media">
          <figure class="media-left">
            <p class="image is-64x64 is-info">
              <img src="https://bulma.io/images/placeholders/128x128.png" alt="">
            </p>
          </figure>
          <div class="media-content">
            <div>
              <p>
                <strong>{{author.name}}</strong> <small>31m</small>
                <br>
                {{text}}
              </p>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</section>